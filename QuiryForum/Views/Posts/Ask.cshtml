@model QuiryForum.Models.ViewModels.AskQuestionVM

@{
    ViewData["Title"] = "Ask";
}

<h1>Ask</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Ask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question.Title" class="control-label"></label>
                <input asp-for="Question.Title" class="form-control" />
                <span asp-validation-for="Question.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Content" class="control-label"></label>
                <input asp-for="Question.Content" class="form-control" />
                <span asp-validation-for="Question.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.CategoryID" class="control-label"></label>
                <select asp-for="Question.CategoryID">
                    @{
                        foreach (Category c in Model.allCategories)
                        {
                            <option value="@c.CategoryID">@c.CategoryName</option>
                        }
                    }
                </select>
                
                <span asp-validation-for="Question.CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>